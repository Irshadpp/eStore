<%-include('../layout/header') %>

    <main class="main">
        <div class="page-header text-center" style="background-image: url('/user/assets/images/page-header-bg.jpg')">
            <div class="container">
                <h1 class="page-title">Shopping Cart<span>Shop</span></h1>
            </div><!-- End .container -->
        </div><!-- End .page-header -->
        <nav aria-label="breadcrumb" class="breadcrumb-nav">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/home">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Shop</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
                </ol>
            </div><!-- End .container -->
        </nav><!-- End .breadcrumb-nav -->

        <div class="page-content">
            <div class="cart">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-9">
                            <table class="table table-cart table-mobile">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% if (cartProducts.length> 0) {
                                        cartProducts.forEach(element => { %>
                                        <tr>
                                            <div class="cart-product" data-cart-item-id="<%= element.productId._id %>">
                                                <td class="product-col">
                                                    <div class="product">
                                                        <figure class="product-media">
                                                            <a href="#">
                                                                <img src="/<%= element.productId.imagePaths[0] %>"
                                                                    alt="Product image">
                                                            </a>
                                                        </figure>

                                                        <h3 class="product-title">
                                                            <a href="#">
                                                                <%= element.productId.productName %>
                                                            </a>
                                                        </h3><!-- End .product-title -->
                                                    </div><!-- End .product -->
                                                </td>
                                                <% if(element.productId.offerId &&
                                                    element.productId.offerId.status==='active' ){ let
                                                    price=element.productId.price - element.productId.price *
                                                    (element.productId.offerId.percentage/100)%>
                                                    <td class="price-col">
                                                        <%= parseFloat(price).toFixed(2) %>
                                                    </td>
                                                    <%}else if(element.productId.categoryId.offerId &&
                                                        element.productId.categoryId.offerId.status==='active' ){ let
                                                        price=element.productId.price - element.productId.price *
                                                        (element.productId.categoryId.offerId.percentage/100)%>
                                                        <td class="price-col">
                                                            <%= parseFloat(price).toFixed(2) %>
                                                        </td>
                                                        <%}else{%>
                                                            <td class="price-col">
                                                                <%= parseFloat(element.productId.price).toFixed(2) %>
                                                            </td>
                                                            <% } %>
                                                                <td class="quantity-col">
                                                                    <div class="cart-product-quantity">
                                                                        <input type="number"
                                                                            class="quantityInput form-control" readonly
                                                                            value="<%= element.quantity %>" min="1"
                                                                            max="5" step="1" data-decimals="0" required>
                                                                        <input type="text" class="cartId"
                                                                            value="<%=element._id%>" hidden>
                                                                        <input type="text" class="productId"
                                                                            value="<%=element.productId._id%>" hidden>
                                                                        <% if(element.productId.offerId &&
                                                                            element.productId.offerId.status==='active'
                                                                            ){ let price=element.productId.price -
                                                                            element.productId.price *
                                                                            (element.productId.offerId.percentage/100)%>
                                                                            <input type="text" class="productPrice"
                                                                                value="<%=price%>" hidden>
                                                                            <%}else
                                                                                if(element.productId.categoryId.offerId
                                                                                &&
                                                                                element.productId.categoryId.offerId.status==='active'
                                                                                ){ let price=element.productId.price -
                                                                                element.productId.price *
                                                                                (element.productId.categoryId.offerId.percentage/100)%>
                                                                                <input type="text" class="productPrice"
                                                                                    value="<%=price%>" hidden>
                                                                                <%}else{%>
                                                                                    <input type="text"
                                                                                        class="productPrice"
                                                                                        value="<%=element.productId.price%>"
                                                                                        hidden>
                                                                                    <% } %>
                                                                    </div><!-- End .cart-product-quantity -->
                                                                </td>
                                                                <td class="total-col">
                                                                    <%= parseFloat(element.total).toFixed(2) %>
                                                                </td>
                                                                <td class="remove-col"><button class="btn-remove"
                                                                        data-product-id="<%= element.productId._id %>"><i
                                                                            class="icon-close"></i></button></td>
                                        </tr>
                        </div>
                        <%})%>
                            <% } %>
                                </tbody>
                                </table><!-- End .table table-wishlist -->
                    </div><!-- End .col-lg-9 -->


                    <aside class="col-lg-3">
                        <div class="summary summary-cart">
                            <h3 class="summary-title">Cart Total</h3><!-- End .summary-title -->

                            <table class="table table-summary">
                                <tbody>
                                    <tr class="summary-subtotal">
                                        <td>Subtotal:</td>
                                        <td class="subtotal">â‚¹<%=parseFloat(subTotal).toFixed(2)%>
                                        </td>
                                    </tr><!-- End .summary-subtotal -->
                                    <tr class="summary-shipping">
                                        <td>Shipping:</td>
                                        <td>&nbsp;</td>
                                    </tr>

                                    <tr class="summary-shipping-row">
                                        <td>
                                            <div class=" ">
                                                <label class="custom-control-label" for="free-shipping">Free
                                                    Shipping</label>
                                            </div><!-- End .custom-control -->
                                        </td>
                                        <td>â‚¹0.00</td>
                                    </tr><!-- End .summary-shipping-row -->



                                    <tr class="summary-shipping-estimate">
                                        <td>Estimate for Your Country<br> <a href="dashboard.html">Change address</a>
                                        </td>
                                        <td>&nbsp;</td>
                                    </tr><!-- End .summary-shipping-estimate -->

                                    <tr class="summary-total">
                                        <td>Total:</td>
                                        <td class="subtotal">â‚¹<%=parseFloat(subTotal).toFixed(2)%>
                                        </td>
                                    </tr><!-- End .summary-total -->
                                </tbody>
                            </table><!-- End .table table-summary -->

                            <a href="/checkout" class="btn btn-outline-primary-2 btn-order btn-block">PROCEED TO
                                CHECKOUT</a>
                        </div><!-- End .summary -->

                        <a href="/allProducts" class="btn btn-outline-dark-2 btn-block mb-3"><span>CONTINUE
                                SHOPPING</span><i class="icon-refresh"></i></a>
                    </aside><!-- End .col-lg-3 -->
                </div><!-- End .row -->
            </div><!-- End .container -->
        </div><!-- End .cart -->
        </div><!-- End .page-content -->
    </main><!-- End .main -->

    </div><!-- End .page-wrapper -->
    <button id="scroll-top" title="Back to Top"><i class="icon-arrow-up"></i></button>

    <script>
        $(document).ready(function () {
            $('.quantityInput').on('change', function () {
                var newQuantity = $(this).val();
                var $parentrow = $(this).closest('tr')
                var cartItemId = $parentrow.find('.cartId').val();
                var productId = $parentrow.find('.productId').val();
                var productPrice = $parentrow.find('.productPrice').val();
                console.log('Cart Item ID:', cartItemId);
                console.log('Cart product price:', productPrice);

                $.ajax({
                    type: 'POST',
                    url: '/updateQuantity',
                    data: {
                        cartItemId: cartItemId,
                        newQuantity: newQuantity,
                        productId: productId,
                        productPrice: productPrice
                    },
                    success: function (response) {
                        const productTotal = $(this).closest('tr').find('.total-col');
                        $('.subtotal').html(parseFloat(response.subTotal).toFixed(2))
                        productTotal.html(parseFloat(response.updatedProductPrice).toFixed(2))
                    }.bind(this),
                    error: function (xhr, status, error) {
                        console.log("Error updating quantity:", error);
                    }
                })
            })


            $(document).on('click', '.btn-remove', async function (event) {


                var productId = $(this).closest('tr').find('.productId').val();
                console.log('Product ID:', productId);

                Swal.fire({
                    title: 'Are you sure?',
                    text: "Do you really want to remove this product!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, remove it!',
                    cancelButtonText: 'No, keep it',
                    customClass: {
                        confirmButton: 'btn btn-danger me-1',
                        cancelButton: 'btn btn-label-primary'
                    },
                    buttonsStyling: false
                }).then(function (result) {
                    if (result.value) {
                        fetch(`http://localhost:3000/cart/deleteProduct/${productId}`, {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json'
                            },

                        }).then(response => {
                            $(this).closest('tr').remove();
                            console.log('Product removed successfully');
                            setTimeout(() => {
                                window.location.reload();
                            }, 1000)

                            Swal.fire({
                                icon: 'success',
                                title: 'Cancelled!',
                                text: 'Product has been removed.',
                                customClass: {
                                    confirmButton: 'btn btn-success',
                                    popup: 'swal2-modal'
                                }
                            });
                            return response.json()

                        })
                            .catch(error => {
                                console.log(error)
                            })
                    }
                })

            });
        });

    </script>


    <!-- Plugins JS File -->
    <script src="/user/assets/js/jquery.min.js"></script>
    <script src="/user/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/user/assets/js/jquery.hoverIntent.min.js"></script>
    <script src="/user/assets/js/jquery.waypoints.min.js"></script>
    <script src="/user/assets/js/superfish.min.js"></script>
    <script src="/user/assets/js/owl.carousel.min.js"></script>
    <script src="/user/assets/js/bootstrap-input-spinner.js"></script>
    <!-- Main JS File -->
    <script src="/user/assets/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    </body>




