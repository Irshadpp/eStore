<%-include('../layout/adminHeader')-%>
            <section class="content-main">
                <div class="row">
                    <div class="col-9">
                        <div class="content-header">
                            <h2 class="content-title">Add New Product</h2>
                        </div>
                        <% if(typeof successMsg != 'undefined'){ %>
                            <p class="text-center text-success mb-5" id="text-danger"><%= successMsg %></p>  
                           <% } %>
                           <% if(typeof warningMsg != 'undefined'){ %>
                            <p class="text-center text-danger  mb-5" id="text-danger"><%= warningMsg %></p> 
                           <% } %>
                    </div>
                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Basic</h4>
                            </div>
                            <div class="card-body">
                                <form method="post" enctype="multipart/form-data" id="uploadForm">
                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">Product title</label>
                                        <input  required type="text" placeholder="Type here" name="productName" class="form-control" id="textInput" />
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Full description</label>
                                        <textarea placeholder="Type here" name="description" class="form-control" rows="4" required></textarea>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="mb-4">
                                                <label class="form-label">Price</label>
                                                <div class="row gx-2">
                                                    <input required placeholder="Rs" name="price" type="number" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="mb-4">
                                                <label class="form-label">Quantity</label>
                                                <div class="row gx-2">
                                                    <input required placeholder="Qty" name="quantity" type="number" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="mb-4">
                                                <label class="form-label">Category</label>
                                                <select name="category" class="form-select">
                                                    <%if(categoryData.length>0){
                                                        categoryData.forEach((item)=>{%>
                                                            <option><%=item.categoryName%></option>
                                                        <%})
                                                    }else{%>
                                                        <option></option>
                                                        <%}%>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                            </div>
                        </div>
                        <!-- card end// -->
                        
                    </div>
                    <div class="col-lg-3">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Media</h4>
                            </div>
                            <div class="card-body">
                                <div class="input-upload">
                                    <img src="assets/imgs/theme/upload.svg" alt="" />
                                    <input class="form-control" name="images" type="file" accept="image/*"/>
                                    <input class="form-control" name="images" type="file" accept="image/*"/>
                                    <input class="form-control" name="images" type="file" accept="image/*"/>
                                    <input class="form-control" name="images" type="file" accept="image/*"/>
                                </div>
                            </div>
                        </div>
                        <!-- card end// -->


                        <!-- Image placeholder -->
    <div class="col-xs-12 col-sm-3 input-label no-left-padding">
        <h4>Upload Image</h4>
    </div>
    <div id="update_photo" class="col-xs-12 col-sm-9 zero-padding">
        <div id="thumb_preview_holder">
            <img id="thumb_preview" data-toggle="modal" href="#img-uploader" src="assets/imgs/theme/upload.svg" alt="Thumbnail Preview" onclick="img_uploader()">
            <input id="filename" type="hidden" name="filetype" value="">
            <input id="filetype" type="hidden" name="filename" value="">
            <input id="x1" type="hidden" name="x1" value="">
            <input id="y1" type="hidden" name="y1" value="">
            <input id="x2" type="hidden" name="x2" value="">
            <input id="y2" type="hidden" name="y2" value="">
            <input id="w" type="hidden" name="w" value="">
            <input id="h" type="hidden" name="h" value="">
        </div>
        <button class="btn btn-primary upload-btn" onclick="uploadImage();" disabled="true">Upload <span class="glyphicon glyphicon-upload"></span></button>
        <button class="btn btn-primary" onclick="refreshImageUploadForm();">Refresh <span class="glyphicon glyphicon-refresh"></span></button>
        <div class="success-message">Image has been uploaded!</div>
    </div>

                        <!-- Image uploading & cropping modal -->
    <div id="img-uploader" class="modal fade zero-padding">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" data-backdrop="static" onclick="hide_opacity();image_edit_mode=false;cancel_upload();">Ã—</button>
                    <h4 class="modal-title">Upload Image</h4>
                </div>
                <div class="modal-body crop_area text-center">
                    <div id="uploader-section">
                        <div class="product_image">
                            <img id="thumbnails" class="thumbnails" src="" style="display:none">
                        </div>
                        <div id="file-uploader">
                            <input id="file_obj" type="file" name="profile_pic">
                        </div>
                    </div>
                    <div id="crop-section" style="display:none">
                        <img id="thumbnail" src="" alt="Create Thumbnail">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal" aria-hidden="true" onclick="hide_opacity();cancel_upload();image_edit_mode=false">Cancel <span class="fa fa-remove zero-margin"></span></button>
                    <button type="button" class="btn btn-sm btn-primary" onclick="hide_opacity();discard_upload();image_edit_mode=false">Discard <span class="fa fa-trash zero-margin"></span></button>
                    <button id="save_thumb" type="button" class="btn btn-sm btn-primary" data-dismiss="modal" aria-hidden="true" onclick="hide_opacity();image_edit_mode=false">Done <span class="fa fa-check zero-margin"></span></button>
                </div>
            </div>
        </div>
    </div>                        


                    </div>
                    <div class=" ">
                        <button class="btn btn-md rounded font-sm hover-up">Add Product</button>
                    </div>
                </form>
                </div>
            </section>
        </main>
        <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
        <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
        <script src="assets/js/vendors/select2.min.js"></script>
        <script src="assets/js/vendors/perfect-scrollbar.js"></script>
        <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
        <!-- Main Script -->
        <script src="assets/js/main.js?v=1.1" type="text/javascript"></script>
        
       
    </body>
</html>
