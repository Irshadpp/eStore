                    <a href="#" class="btn btn-primary" onclick="downloadPDF()">Download pdf</a>
                </div>
                <div class="m-1">
                    <a href="#" class="btn btn-primary" onclick="downloadExcel()">Download exel</a>
                </div>
            </div>
            </section>
            <!-- content-main end// -->
        </main>
       
        <script>
             const orderData = <%- JSON.stringify(orderData) %>;
            const orderDateArray =  orderData.map(order => order.date);
            function formatDate(dateString){
                const date = new Date(dateString);
                return `${date.getDate()}-${date.getMonth() + 1}-${date.getFullYear()}`;
            }
                document.querySelectorAll('tbody tr').forEach((row, index) => {
        const dateCell = row.querySelector('td:nth-child(3)');
        const formattedDate = formatDate(orderDateArray[index]);
        dateCell.textContent = formattedDate;
    });

           
           

            document.addEventListener("DOMContentLoaded", function() {
        const generateButton = document.querySelector('.btn-primary');
        const startDateInput = document.getElementById('start-date');
        const endDateInput = document.getElementById('end-date');

        generateButton.addEventListener('click', function(event) {
            event.preventDefault();

           
                const startDate = new Date(startDateInput.value);
                const endDate = new Date(endDateInput.value);
                document.getElementById('warningMsg').textContent = ''
                if(startDate > Date.now() || (startDateInput.value || endDateInput.value) === ''){
                    const msg = document.getElementById('warningMsg');
                    return msg.textContent = 'Please give valid date'
                }
                let body = {
                    startDate: startDate,
                    endDate: endDate
                };
           

            fetch('/admin/report', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(body)
            })
            .then(response => response.json())
            .then(data =>{

            console.log(data)
                const orderTableBody = document.getElementById('order-table-body');

orderTableBody.innerHTML = '';

data.forEach(element => {
    const row = document.createElement('tr');
    row.innerHTML = `
        <td><a href="#" class="fw-bold">${element.orderId}</a></td>
        <td>${element.userId.username}</td>
        <td>${element.date}</td>
        <td class="text-center">₹${parseInt(element.offerDeduction).toFixed(2)}</td>
        <td class="text-center">₹${parseInt(element.couponDeduction).toFixed(2)}</td>
        <td class="text-center">₹${parseInt(element.subTotal).toFixed(2)}</td>
        <td class="text-center">${element.paymentMode}</td>
    `;
    orderTableBody.appendChild(row);
});
            })
            .catch(error => {
                console.error('Error:', error);
            });
        });
    });

    function downloadPDF() {
    const element = document.getElementById('order-table-body');
    const wrapperDiv = document.createElement('div');
    wrapperDiv.style.width = '100%';
    wrapperDiv.style.overflowX = 'auto'; // Ensure horizontal scrolling if the table is wider than the page

    // Clone the table element and append it to the wrapper div
    const clonedTable = element.cloneNode(true);
    wrapperDiv.appendChild(clonedTable);

    // Ensure that cloned table's styles are preserved
    clonedTable.style.width = '100%';
    clonedTable.style.borderCollapse = 'collapse'; // Ensure table borders are preserved

    html2pdf(wrapperDiv, {
        margin: 10, // Optional, set the margin (in mm) on each page
        filename: 'sales_report.pdf', // Optional, set the name of the PDF file
        image: { type: 'jpeg', quality: 0.98 }, // Optional, quality and type for images
        html2canvas: { dpi: 192, letterRendering: true }, // Optional, dpi and letterRendering for html2canvas
        jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' } // Optional, unit, format, and orientation for jsPDF
    })
    .save();
}

function downloadExcel() {
    const table = document.getElementById('order-table-body');
    const ws = XLSX.utils.table_to_sheet(table);
    const wb = XLSX.utils.book_new();
    XLSX.utils.book_append_sheet(wb, ws, 'Sales_Report');
    XLSX.writeFile(wb, 'sales_report.xlsx');
}
  

         </script>
