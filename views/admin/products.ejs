<%-include('../layout/adminHeader')-%>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Products List</h2>
            </div>
            <div>
                <!-- <a href="#" class="btn btn-light rounded font-md">Export</a> -->
                <!-- <a href="#" class="btn btn-light rounded font-md">Import</a> -->
                <a href="/admin/addProduct" class="btn btn-primary btn-sm rounded">Create new</a>
            </div>
        </div>
        <div class="card mb-4">

            <div class="card-body">
                <%if(products.length>0){
                    products.forEach((item, index)=>{%>

                    <article class="itemlist">
                        <div class="row align-items-center">
                            <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                                <a class="itemside" href="/admin/editProduct/<%=item._id%>">
                                    <div class="left">
                                        <img src='../<%=item.imagePaths[0]%>' class="img-sm img-thumbnail" alt="Item" />
                                    </div>
                                    <div class="info">
                                        <h6 class="mb-0">
                                            <%=item.productName%>
                                        </h6>
                                    </div>
                                </a>
                            </div>


                            <div class="col-lg-2 col-sm-2 col-4 col-price"><span>
                                    <%= item.price%>
                                </span></div>
                            <div class="col-lg-1 col-sm-2 col-4 col-date mr-20" >
                                <span>
                                    <%= item.categoryId.categoryName%>
                                </span>
                            </div>
                            <div class="col-lg-2 col-sm-2 col-4 col-status">
                                <%if (item.quantity===0) {%>
                                    <span class="badge rounded-pill ">Out of stock</span>
                                    <%} else if(item.quantity < 5){%>
                                        <span class="badge rounded-pill alert-danger "><%= item.quantity %> nos left</span>
                                        <%}else if(item.quantity < 10){%>
                                        <span class="badge rounded-pill alert-warning "><%= item.quantity %> nos left</span>
                                        <%}else{%>
                                        <span class="badge rounded-pill alert-success "><%= item.quantity %> nos left</span>
                                        <%}%>

                                           
                                        

                            </div>
                            <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                <%if (item.list === true) {%>
                                    <a href="" onclick="list('<%=item._id%>')"
                                    class="btn btn-sm font-sm rounded btn-light  "> Unlist </a>
                                <%} else {%>
                                    <a href="" onclick="list('<%=item._id%>')"
                                    class="btn btn-sm font-sm rounded btn-brand "> List</a>
                               <%} %>
                                
                                
                                <a href="" onclick="deleteProduct('<%=item._id%>')" class="btn btn-sm  font-sm btn-danger rounded"
                                    > <i class="material-icons md-delete_forever"></i> Delete </a>
                            </div>
                        </div>

                    </article>

                    
                    <%}) }%>


            </div>

        </div>


    </section>

    </div>
    </main>
    <script src="/admin/assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/admin/assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/admin/assets/js/vendors/select2.min.js"></script>
    <script src="/admin/assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="/admin/assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/admin/assets/js/main.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        async function list(productId) {
            try {
                await axios.put(`/admin/products/list/${productId}`);
            } catch (error) {
                console.log(error.message);
            }

        };

       

        async function deleteProduct(productId) {
            try {
                await axios.delete(`/admin/products/delete/${productId}`);
            } catch (error) {
                console.log(error.message);
            }
        }
    </script>
    </body>

    </html>